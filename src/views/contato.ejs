<%- include('includes/head') %>
<%- include('includes/nav') %>


<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include('includes/messages'); %>

            <form class="form-cadastro" action="/contato/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label for="nome">Nome</label>
                  <input type="text" class="form-control" name="nome" aria-describedby="emailHelp" placeholder="Digite seu email">
                </div>
                <div class="form-group">
                  <label for="sobrenome">Sobrenome</label>
                  <input type="text" class="form-control" name="sobrenome" aria-describedby="emailHelp" placeholder="Digite seu email">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Digite seu email">
                </div>
                <div class="form-group">
                  <label for="telefone">Telefone</label>
                  <input type="tel" class="form-control" name="telefone" aria-describedby="emailHelp" placeholder="Digite seu email">
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
              </form>

            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>