<%- include('includes/head') %>
<%- include('includes/nav') %>


<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

            <div class="row">
                <div class="col lg">
                    <h4>Faça seu cadastro</h4>

                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label for="email">Seu e-mail</label>
                          <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Digite seu email">
                        </div>
                        <div class="form-group">
                            <label for="password">Sua senha</label>
                            <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Digite sua senha">
                          </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                      </form>
                </div>


                <div class="col lg">
                    <h4>Faça seu login</h4>

                    <form action="/login/singin" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label for="email">Seu e-mail</label>
                          <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Digite seu email">
                        </div>
                        <div class="form-group">
                            <label for="password">Sua senha</label>
                            <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Digite sua senha">
                          </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>


            </div>
        </div>

        
        <div class="col-lg-2"></div>


    </div>
</div>

<%- include('includes/footer') %>